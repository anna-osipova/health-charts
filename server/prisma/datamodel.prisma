type Post {
  id: ID! @id
  published: Boolean! @default(value: false)
  title: String!
  content: String!
}

type RunningWorkout {
  id: ID! @id
  createdAt: DateTime! @createdAt
  email: String!
  startDate: DateTime!
  endDate: DateTime!
  totalDistance: Float!
  totalDistanceUnit: String! @default(value: "km")
  duration: Float!
  durationUnit: String! @default(value: "min")
  totalEnergyBurned: Float!
  totalEnergyBurnedUnit: String! @default(value: "kcal")
  totalAscent: Float
  totalAscentUnit: String @default(value: "km")
  sourceName: String
}

type User {
  id: ID! @id
  createdAt: DateTime! @createdAt
  stravaId: String! @unique
  stravaUsername: String!
  firstName: String!
  lastName: String!
  sex: String!
  accessToken: String!
  refreshToken: String!
  accessTokenExpiresAt: Int!
}
