type RunningWorkout {
  id: ID! @id
  stravaId: String!
  createdAt: DateTime! @createdAt
  userId: String!
  startDate: DateTime!
  endDate: DateTime!
  totalDistance: Float!
  totalDistanceUnit: String! @default(value: "km")
  duration: Float!
  durationUnit: String! @default(value: "min")
  totalEnergyBurned: Float!
  totalEnergyBurnedUnit: String! @default(value: "kcal")
  totalAscent: Float
  totalAscentUnit: String @default(value: "km")
  sourceName: String
}

type CyclingWorkout {
  id: ID! @id
  stravaId: String!
  createdAt: DateTime! @createdAt
  userId: String!
  startDate: DateTime!
  endDate: DateTime!
  totalDistance: Float!
  totalDistanceUnit: String! @default(value: "km")
  duration: Float!
  durationUnit: String! @default(value: "min")
  totalEnergyBurned: Float!
  totalEnergyBurnedUnit: String! @default(value: "kcal")
  totalAscent: Float!
  totalAscentUnit: String! @default(value: "m")
  sourceName: String
}

type User {
  id: ID! @id
  createdAt: DateTime! @createdAt
  stravaId: String! @unique
  stravaUsername: String!
  firstName: String!
  lastName: String!
  sex: String!
  accessToken: String!
  refreshToken: String!
  accessTokenExpiresAt: Int!
}
